# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/document_forensics

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-environment
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIRECTORY=uploads
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/tiff,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/plain

# AI/ML Model Settings
MODELS_DIRECTORY=models
CV_MODEL_PATH=models/cv_model.pkl
NLP_MODEL_PATH=models/nlp_model.pkl

# Processing Settings
MAX_CONCURRENT_JOBS=4
JOB_TIMEOUT_MINUTES=30

# Logging Settings
LOG_LEVEL=INFO
LOG_DIRECTORY=logs

# API Settings
API_RATE_LIMIT=100/minute
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Development Settings
DEBUG=false
SQL_DEBUG=false